    "recipeInstructions": [
      {
        "@type": "HowToStep",
        "name": "Prepare the potatoes and chicken",
        "text": "In a 3-quart saucepan, combine broth, potatoes, lemons, jalapeño peppers, and cumin. Bring to a boil, reduce heat, cover, and cook for 5 minutes."
      },
      {
        "@type": "HowToStep",
        "name": "Add the chicken",
        "text": "Add the chicken breasts, cover, and cook for about 15 minutes longer, until the potatoes are tender and the chicken juices run clear when pierced."
      },
      {
        "@type": "HowToStep",
        "name": "Cool and drain",
        "text": "Remove from heat and add cilantro to the saucepan. Let the potatoes and chicken cool in the broth. Drain the mixture, reserving 3/4 cup of the broth."
      },
      {
        "@type": "HowToStep",
        "name": "Assemble the platter",
        "text": "Remove cilantro, jalapeños, and lemons. Shred the chicken and mound the potatoes in the center of a large platter. Arrange the chicken and remaining ingredients around the potatoes."
      },
      {
        "@type": "HowToStep",
        "name": "Serve",
        "text": "Serve the reserved broth in a sauceboat and the salsa in a bowl on the side."
      }
    ],
